// https://www.typescriptlang.org/ja/tsconfig
{
  "include": ["./src/**/*", "./cosmos/**/*"],

  "compilerOptions": {
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "noEmit": true,
    "target": "ES2020",

    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
